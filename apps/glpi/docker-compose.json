{
  "services": [
    {
      "name": "glpi",
      "image": "ghcr.io/glpi-project/glpi:11.0-nightly",
      "isMain": true,
      "internalPort": 80,
      "environment": {
        "GLPI_DB_HOST": "glpi-db",
        "GLPI_DB_PORT": "3306",
        "GLPI_DB_NAME": "glpi",
        "GLPI_DB_USER": "glpi",
        "GLPI_DB_PASSWORD": "${GLPI_DB_PASSWORD}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/glpi",
          "containerPath": "/var/glpi"
        }
      ]
    },
    {
      "name": "glpi-db",
      "image": "mysql",
      "environment": {
        "MYSQL_RANDOM_ROOT_PASSWORD": "yes",
        "MYSQL_DATABASE": "glpi",
        "MYSQL_USER": "glpi",
        "MYSQL_PASSWORD": "${GLPI_DB_PASSWORD}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/db",
          "containerPath": "/var/lib/mysql"
        }
      ],
      "healthCheck": {
        "interval": "5s",
        "timeout": "5s",
        "retries": 10,
        "test": "mysqladmin ping -h 127.0.0.1 -u $$MYSQL_USER --password=$$MYSQL_PASSWORD"
      }
    }
  ]
}
