{
  "services": [
    {
      "name": "habittrove",
      "image": "dohsimpson/habittrove:v0.2.18",
      "isMain": true,
      "internalPort": 3000,
      "environment": {
          "AUTH_SECRET": "${HABITTROVE_AUTH_SECRET}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/app",
          "containerPath": "/app/data"
        }
      ]
    }
  ]
}