{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "tipimate",
      "image": "ghcr.io/steveiliop56/tipimate:v2.1.0",
      "isMain": true,
      "volumes": [
        {
          "containerPath": "/data",
          "hostPath": "/${APP_DATA_DIR}/data/"
        }
      ],
      "environment": [
        {
          "key": "TIPIMATE_NOTIFICATION_URL",
          "value": "${TIPIMATE_NOTIFICATION_URL}"
        },
        {
          "key": "TIPIMATE_SERVER_NAME",
          "value": "${TIPIMATE_SERVER_NAME:-Tipimate}"
        },
        {
          "key": "TIPIMATE_INTERVAL",
          "value": "${TIPIMATE_INTERVAL:-30}"
        },
        {
          "key": "TIPIMATE_RUNTIPI_URL",
          "value": "http://runtipi:3000"
        },
        {
          "key": "TIPIMATE_INSECURE",
          "value": "false"
        },
        {
          "key": "TIPIMATE_LOG_LEVEL",
          "value": "info"
        },
        {
          "key": "TIPIMATE_DATABASE_PATH",
          "value": "/data/tipimate.db"
        },
        {
          "key": "TIPIMATE_JWT_SECRET",
          "value": "${TIPIMATE_JWT_SECRET}"
        }
      ]
    }
  ]
}